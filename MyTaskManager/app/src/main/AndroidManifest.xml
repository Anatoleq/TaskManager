<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.yablonski.mytaskmanager" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".StartActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_login_activity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/title_main_activity"
            android:launchMode="singleTask" />
        <activity
            android:name=".SampleActivity"
            android:label="@string/title_sample_activity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".LvActivity"
            android:label="@string/title_activity_lv" >
            <intent-filter>
                <action android:name="android.intent.action.showlist" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SpinnerActivity"
            android:label="@string/title_activity_spinner" >
            <intent-filter>
                <action android:name="android.intent.action.showspinner" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GridviewActivity"
            android:label="@string/title_activity_gridview" >
            <intent-filter>
                <action android:name="android.intent.action.showgrid" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FragActivity"
            android:label="@string/title_activity_frag" >
            <intent-filter>
                <action android:name="android.intent.action.showfrag" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SwipeActivity"
            android:label="@string/title_activity_swipe" >
            <intent-filter>
                <action android:name="android.intent.action.showswipe" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
