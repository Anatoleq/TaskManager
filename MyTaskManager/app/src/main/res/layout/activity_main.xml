<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sample_btn"
        android:text="Start sample activity"
        android:onClick="onStartSampleClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listv_bnt"
        android:layout_below="@+id/sample_btn"
        android:text="Start listview activity"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_bnt"
        android:layout_below="@+id/listv_bnt"
        android:text="Start spinner activity"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/grid_bnt"
        android:layout_below="@+id/spinner_bnt"
        android:text="Start gridview activity"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_bnt"
        android:layout_below="@+id/grid_bnt"
        android:text="Start fragment activity"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/swipe_bnt"
        android:layout_below="@+id/fragment_bnt"
        android:text="Start swipe activity"/>

    <TextView
        android:text="Hello"
        android:id="@+id/name_t"
        android:layout_below="@+id/swipe_bnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
